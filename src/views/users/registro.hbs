<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                Registro de Usuario
            </div>
            <div class="card-body">
                <form action="/users/registro" method="POST">
                    <div class="form-group">
                        <input type="text" placeholder="Nombre" class="form-control" name="name" value="{{name}}">
                    </div>
                    <div class="form-group">
                        <input type="email" placeholder="Email" class="form-control" name="email" value="{{email}}">
                    </div>
                    <div class="form-group">
                        <input type="password" placeholder="Password" class="form-control" name="pass" value="{{pass}}">
                    </div>
                    <div class="form-group">
                        <input type="password" placeholder="Confirmar Password" class="form-control" name="cpass" value="{{cpass}}">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success btn-block">Registrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>